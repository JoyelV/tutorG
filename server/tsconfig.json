{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist", // Output directory for compiled JS files
    "baseUrl": "./",
    "rootDir": "./",  // Specify the root directory of your TypeScript files
    "paths": {
      "*": ["*"] // Map paths for modules
    }
  },
  "include": ["*.ts"], // Include all TS files in the src folder
  "exclude": ["node_modules","dist"] // Exclude node_modules
}
